{
    "version": 2,
    "builds": [
        {
            "src": "Draw-DFA/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "Draw-DFA/build",
                "buildCommand": "cd Draw-DFA && npm install && npm run build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/Draw-DFA/build/static/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/Draw-DFA/build/favicon.ico"
        },
        {
            "src": "/manifest.json",
            "dest": "/Draw-DFA/build/manifest.json"
        },
        {
            "src": "/robots.txt",
            "dest": "/Draw-DFA/build/robots.txt"
        },
        {
            "src": "/(.*)",
            "dest": "/Draw-DFA/build/index.html"
        }
    ],
    "env": {
        "CI": "false",
        "NODE_ENV": "production"
    }
} 